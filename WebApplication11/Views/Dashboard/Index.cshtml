    <style>
        #chart_container{
            width:400px;
            height:400px;
            border:1px solid #ddd;
            padding: 1px;
            border-radius: 4px;
        }
    </style>
</head>

<body>
    <div id="chart_container">
        <canvas id="pie_chart"></canvas>

    </div>

    <script>

        
        var ages = JSON.parse('@Html.Raw(Json.Serialize(ViewBag.AGES))');
        var repArray = JSON.parse('@Html.Raw(Json.Serialize(ViewBag.REP))');



        var ctx = $("#pie_chart");
        var pieChart = new Chart(ctx, {

            type: 'line',
            data: {
                labels: ages,
                datasets: [{
                    label: "Pie Chart",
                    data: repArray,
                    backgroundColor: ["rgba(242,166,54,.5)", "rgba(145,65,72,.5)", "rgba(74,25,92,.5)"],
                    borderColor: ["rgba(242,166,54,.5)", "rgba(145,65,72,.5)", "rgba(74,25,92,.5)"],
                    borderWidth: 1

                }]
            },
            options: {
                maintainAspectRatio: false,
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }


            },
        });


    </script>



</body>
</html>

